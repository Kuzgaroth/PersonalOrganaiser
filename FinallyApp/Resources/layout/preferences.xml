<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_settings"
        android:layout_below="@id/toolbar"
        android:id="@+id/notification_switch"
        android:textSize="16dp"
        android:layout_marginHorizontal="15dp"
        android:checked="true"
        android:switchPadding="170dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/summary_pref"
        android:layout_below="@id/notification_switch"
        >
    <TextView
        android:text="@string/summary_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/summary_pref_title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:textSize="18dp"
        android:textColor="#000000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:text="@string/summary_explanation"
        android:textSize="16dp"
        android:paddingHorizontal="15dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dip"
        android:id="@+id/note_sum_pref"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/title_note"
    />
    <Spinner
        android:id="@+id/note_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/title_note"
    />
</LinearLayout>
        <LinearLayout
        android:orientation="vertical"
        android:padding="10dip"
        android:id="@+id/todo_sum_pref"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/title_todo"
    />
    <Spinner
        android:id="@+id/todo_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/title_todo"
    />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dip"
        android:id="@+id/event_sum_pref"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/title_event"
    />
    <Spinner
        android:id="@+id/event_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/title_event"
    />
</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/datetime_pref"
        android:layout_below="@id/summary_pref"
        >
    <TextView
        android:text="@string/datetime_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/datetime_pref_title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:textSize="18dp"
        android:textColor="#000000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dip"
        android:id="@+id/dateformat_pref"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/datetime_format"
        />
        <Spinner
        android:id="@+id/datetime_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/datetime_format"
        />
    </LinearLayout>
        
</LinearLayout>
</RelativeLayout>