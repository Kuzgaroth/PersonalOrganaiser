<FrameLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/note_frame">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:id="@+id/note_card"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/NoteCard_color" 
        card_view:contentPadding="20px">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
        android:text="header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerItem"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="50px" 
        />
    <TextView
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionItem"
        android:inputType="none|textMultiLine"
        android:layout_gravity="left"
        android:layout_marginLeft="10px"
        android:maxLines="2"
        android:minLines="1" />
    <TextView
        android:text="creation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creation_dateItem"
        android:layout_gravity="right"
        android:maxLines="1" />

</LinearLayout>
 </android.support.v7.widget.CardView>
</FrameLayout>