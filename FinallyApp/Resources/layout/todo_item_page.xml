
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <EditText
        android:text="name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/todo_item_name"
        android:maxLines="3"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="30px"
        android:inputType="text"
        android:layout_marginHorizontal="30dp" 
        />
    <TextView
        android:text="@string/invalid_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "@color/Deadline_color"
        android:textSize = "15dp"
        android:layout_below="@id/todo_item_name"
        android:id="@+id/todo_edit_name_invalid"
        android:layout_alignLeft="@id/todo_item_name"
        android:visibility="invisible"
        />
    <EditText
        android:text="description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todo_edit_name_invalid"
        android:id="@+id/todo_item_description"
        android:inputType="textMultiLine|none"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:text="deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/todo_item_description"
        android:id="@+id/todo_item_deadline"
        android:layout_marginHorizontal="30px"
        android:textSize="22dp"  />
    <TextView
        android:text="@string/invalid_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "@color/Deadline_color"
        android:textSize = "15dp"
        android:layout_below="@id/todo_item_deadline"
        android:id="@+id/todo_edit_deadline_invalid"
        android:layout_alignLeft="@id/todo_item_deadline"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize = "20dp"
        android:text="status"
        android:layout_below="@id/todo_edit_deadline_invalid"
        android:id="@+id/status"
        android:layout_alignLeft="@id/todo_item_deadline"
        />
    <TextView
        android:text="creation_date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:id="@+id/todo_item_creation_date"
        android:layout_marginHorizontal="20px"
        android:layout_alignParentRight="true" />

</RelativeLayout>