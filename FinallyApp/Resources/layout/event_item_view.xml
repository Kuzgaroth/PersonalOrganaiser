<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/event_frame">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        android:id="@+id/event_card"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/EventCard_color"
        card_view:contentPadding="20px">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px">
            <TextView
                android:text="header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_header_view"
                android:inputType="text"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="50px"
        />
            <TextView
                android:text="description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_description_view"
                android:inputType="none|textMultiLine"
                android:layout_gravity="left"
                android:layout_marginLeft="10px"
                android:maxLines="2"
                android:minLines="1" />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/alarm_on_24"
                    android:id="@+id/event_alarm_icon"
                    android:layout_marginRight="10dp"/>
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="text_status"
                    android:id="@+id/event_text_status"
                    android:textSize="16dp"/>    
                </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="event_start"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/events_start_item"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="event_end"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/events_end_item"/>
            <TextView
                android:text="creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_creation_date_view"
                android:layout_gravity="right"
                android:maxLines="1" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>